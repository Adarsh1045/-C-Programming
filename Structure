#include<stdio.h>
struct student {
    char name[50];
    int adm_no;
    char clas[50];
};
int main() {
    struct student s;
    printf("enter the name:\n");
    scanf("%[^\n]s",s.name);
    printf("enter adm_no:\n");
    scanf("%d",&s.adm_no);
    printf("enter class:\n");
    scanf("%s",s.clas);
    printf("\nstudent information:\n");
    printf("name: %s\n",s.name);
    printf("adm_no: %d\n",s.adm_no);
    printf("class: %s\n",s.clas);
    return 0;
}
